{
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"./lib"
	],
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"types": [
			"node"
		],
		"strict": true,
		"pretty": true,
		"allowJs": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"sourceMap": true,
		"declaration": true,
		"removeComments": true,
		"esModuleInterop": true,
		"strictNullChecks": false,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"suppressImplicitAnyIndexErrors": true
	}
}